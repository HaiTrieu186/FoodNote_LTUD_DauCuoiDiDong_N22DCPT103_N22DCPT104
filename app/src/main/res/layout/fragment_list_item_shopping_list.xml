<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_ingredient_selector"
    android:orientation="vertical"
    android:padding="16dp"
    android:elevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_list_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Mua đồ cuối tuần"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_list_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFF0F0"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:text="Đang mua"
            android:textColor="#E23E3E"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_created_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="29/12/2025"
        android:drawableStart="@drawable/ic_default_ingredient"
        android:drawablePadding="10dp"
        android:drawableTint="#E23E3E"
        android:textColor="#757575"
        android:textSize="13sp" />
</LinearLayout>