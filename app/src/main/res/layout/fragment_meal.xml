<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".fragments.MealFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btn_prev_date"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@android:drawable/ic_media_previous"
            app:tint="#757575"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <LinearLayout
            android:id="@+id/layout_pick_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/bg_ingredient_selector">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                app:tint="#E23E3E"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tv_current_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29/12/2025"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_next_date"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@android:drawable/ic_media_next"
            app:tint="#757575"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp"> <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="20dp"
                        android:background="#E23E3E"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Buổi Sáng"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/btn_add_breakfast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ Thêm món"
                        android:textColor="#E23E3E"
                        android:textStyle="bold"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_breakfast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>

                <TextView
                    android:id="@+id/tv_empty_breakfast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chưa lên thực đơn cho bữa này"
                    android:textSize="13sp"
                    android:textColor="#999"
                    android:gravity="center"
                    android:padding="20dp"
                    android:background="#F9F9F9"
                    android:visibility="gone"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="20dp"
                            android:background="#E23E3E"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Buổi Trưa"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"/>

                        <TextView
                            android:id="@+id/btn_add_lunch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ Thêm món"
                            android:textColor="#E23E3E"
                            android:textStyle="bold"
                            android:background="?attr/selectableItemBackground"
                            android:padding="8dp"/>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_lunch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"/>

                    <TextView
                        android:id="@+id/tv_empty_lunch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chưa lên thực đơn cho bữa này"
                        android:textSize="13sp"
                        android:textColor="#999"
                        android:gravity="center"
                        android:padding="20dp"
                        android:background="#F9F9F9"
                        android:visibility="gone"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="20dp"
                            android:background="#E23E3E"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Buổi Tối"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"/>

                        <TextView
                            android:id="@+id/btn_add_dinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ Thêm món"
                            android:textColor="#E23E3E"
                            android:textStyle="bold"
                            android:background="?attr/selectableItemBackground"
                            android:padding="8dp"/>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_dinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"/>

                    <TextView
                        android:id="@+id/tv_empty_dinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chưa lên thực đơn cho bữa này"
                        android:textSize="13sp"
                        android:textColor="#999"
                        android:gravity="center"
                        android:padding="20dp"
                        android:background="#F9F9F9"
                        android:visibility="gone"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ghi chú trong ngày"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#333"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <EditText
                    android:id="@+id/edt_meal_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ví dụ: Hạn chế tinh bột, mua thêm rau..."
                    android:background="@null"
                    android:padding="16dp"
                    android:textSize="14sp"
                    android:minHeight="100dp"
                    android:gravity="top"/>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_create_shopping_list"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:text="Tạo danh sách mua sắm"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#E23E3E"
                app:cornerRadius="12dp"
                android:stateListAnimator="@null"
                android:elevation="4dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>