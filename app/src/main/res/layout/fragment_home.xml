<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".fragments.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">


<!--            <SearchView-->
<!--                android:id="@+id/sv_home"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_alignParentTop="true"-->
<!--                android:background="@drawable/search_view_selector"-->
<!--                android:iconifiedByDefault="false"-->
<!--                android:queryBackground="@android:color/transparent"-->
<!--                android:queryHint="Hôm nay ăn gì......">-->

<!--            </SearchView>-->

            <TextView
                android:id="@+id/tv_home_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sv_home"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_home_fragment_mon_ngon"
                android:drawablePadding="10dp"
                android:drawableTint="#E23E3E"
                android:text="Món ngon mỗi ngày"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_home_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/tv_home_recommend"/>

            <TextView
                android:id="@+id/tv_home_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rcv_home_recommend"
                android:layout_marginTop="15dp"
                android:text="Danh mục món ăn"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/btn_home_category_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rcv_home_recommend"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_home_fragment_see_all"
                android:drawablePadding="10dp"
                android:drawableTint="#E23E3E"
                android:focusable="true"
                android:text="Xem tất cả"
                android:textColor="#E23E3E"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linear_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/btn_home_category_see_all"
                android:layout_marginTop="10dp"
                >


                <Button
                    android:id="@+id/btn_home_category_main_dish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_selector"
                    android:textColor="@color/text_button_color"
                    android:text="Món chính" />

                <Button
                    android:id="@+id/btn_home_category_soup_side"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_selector"
                    android:textColor="@color/text_button_color"
                    android:text="Canh rau" />

                <Button
                    android:id="@+id/btn_home_category_snack_dessert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_selector"
                    android:textColor="@color/text_button_color"
                    android:text="Ăn vặt" />

                <Button
                    android:id="@+id/btn_home_category_vegeterian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_selector"
                    android:textColor="@color/text_button_color"
                    android:text="Món chay" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_home_cusine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_category"
                android:layout_marginTop="20dp"
                android:text="Ẩm thực vùng miền"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_home_cusine"
                android:layout_marginTop="15dp"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>






</LinearLayout>